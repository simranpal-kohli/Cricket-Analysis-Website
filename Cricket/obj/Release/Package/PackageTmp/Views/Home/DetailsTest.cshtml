<h2><b>Wicket Keeper</b></h2>
<table class="table table-striped">
    
    <tr>
        <th>@Html.DisplayNameFor(model => model.PlayerName)</th>
        <th>@Html.DisplayNameFor(model => model.MatchesPlayed)</th>
        <th>@Html.DisplayNameFor(model => model.MaxRuns)</th>
        <th>@Html.DisplayNameFor(model => model.AvgSR)</th>
        <th>@Html.DisplayNameFor(model => model.Review)</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.CategoryId == 4)
        {
            <tr>
                <td width="150">@Html.DisplayFor(model => item.PlayerName)</td>
                <td width="150">@Html.DisplayFor(model => item.MatchesPlayed)</td>
                <td width="150">@Html.DisplayFor(model => item.MaxRuns)</td>
                <td width="150">@Html.DisplayFor(model => item.AvgSR)</td>
                <td width="150">@Html.DisplayFor(model => item.Review)</td>
                <td width="150">
                    <a href="#" class="btn btn-success"
                       onclick="ShowPlayer(@item.PlayerId,@item.CategoryId)">
                        <i class="glyphicon glyphicon-eye-open"></i>
                    </a>
                </td>
                <td width="150">
                    <a href="#" class="btn btn-danger"
                       onclick="DeletePlayer(@item.PlayerId)">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </td>
            </tr>
        }
    }
</table>

