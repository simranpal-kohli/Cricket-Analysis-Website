@model IEnumerable<Cricket.Models.DetailModel>

@{
    ViewBag.Title = "DetailsTest";
    
}

<h1 class="alert-info">@ViewBag.leagueselectedname League<br>Team @ViewBag.teamname Players</h1>

<div>
    @Html.ActionLink("Add a Player", "AddPlayer",new { }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Add a Match Record", "AddMatch",new { }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("View Player Record", "RecordViewTest", new { id = ViewBag.TeamId },new { @class="btn btn-primary"})
