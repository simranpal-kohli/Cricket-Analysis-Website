<script>

    var ShowPlayer = function (Playerid,Categoryid)
    {
        //var url="/Home/ShowPlayer?playerid="+Playerid;
        //$("#myModalBodyDiv").load(url,function(){
        //    $("#myModal").modal("show")
        //})
        $.ajax({

            type: "post",
            url: "/home/showplayer",
            data:{playerid: Playerid,categoryid:Categoryid},
            success:function(response)
            {
                $("#myModalBodyDiv").html(response);
                $("#myModal").modal("show");
            }
        })
    }
    

</script>
